@model StokHaneV4.Models.Taburun

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4 ">
    <div class="card-header py-3"> <h6 class="m-0 font-weight-bold text-primary">Düzenle</h6></div>
    <div class="card-body">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.idurun)

                <div class="form-group">
                    <h6 class="control-label col-md-10">Ürün Adı</h6>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UrunAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UrunAdi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h6 class="control-label col-md-10">Stok Kodu</h6>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.stokKod, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.stokKod, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                        <a href='@Url.Action("Index","Taburuns")' class="btn btn-primary">Listeye Dön</a>
                    </div>
                </div>
            </div>
        }

    </div>


</div>



