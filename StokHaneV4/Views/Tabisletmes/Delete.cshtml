@model StokHaneV4.Models.Tabisletme

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4 ">
    <div class="card-header py-3"> <h6 class="m-0 font-weight-bold text-danger">İşletmeyi silmek istediğinize emin misiniz ?</h6></div>
    <div class="card-body">



        <div>

            <dl class="dl-horizontal">
                <dt>
                    İşletme kod
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.isletmeKod)
                </dd>

                <dt>
                   İşletme Adı
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.isletmeAdi)
                </dd>

            </dl>
            <hr />
            <p class="text-danger">Güvenlik amacıyla</p>
            <p>İşletmeyi silmeden önce İçersindeki tavukhaneleri silmeniz gerekmektedir.</p>
            
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Sil" class="btn btn-danger" /> 
                    <a href='@Url.Action("Index","Tabisletmes")' class="btn btn-primary">İptal</a>

                    
                </div>
            }
        </div>


    </div>


</div>

