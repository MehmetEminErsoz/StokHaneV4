@model StokHaneV4.Models.Tabrasyontarifi

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<div class="card shadow mb-4 ">
    <div class="card-header py-3"> <h6 class="m-0 font-weight-bold text-primary">Anasayfa</h6></div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idRasyonTarif)

            <div class="form-group">
                <h6 class="control-label col-md-10">Rasyon</h6>
                <div class="col-md-10">
                    @Html.DropDownList("idRasyon", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idRasyon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h6 class="control-label col-md-10"> Ürün</h6>
                <div class="col-md-10">
                    @Html.DropDownList("idUrun", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idUrun, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h6 class="control-label col-md-10">Miktar</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TarifMiktar, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TarifMiktar, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                    <a href='@Url.Action("istenenindex","Tabrasyontarifis",new {id=Model.idRasyon})' class="btn btn-primary">Listeye Dön</a>
                </div>
            </div>
        </div>
        }

    </div>
    

</div>

