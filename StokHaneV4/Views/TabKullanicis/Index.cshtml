@model IEnumerable<StokHaneV4.Models.TabKullanici>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kullanıcı Sayfası</h2>

<!-- Custom fonts for this template -->
<link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">

<!-- Custom styles for this template -->
<link href="~/css/sb-admin-2.min.css" rel="stylesheet">

<!-- Custom styles for this page -->
<link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">
            Kullanıcı Tablosu


        </h6>
        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered " id="dataTable" align="center">
                    <thead class="container">
                        <tr>
                            <th>
                                Kullanıcı Adı
                            </th>
                            <th>
                                İsim
                            </th>
                            <th>
                                Soyisim
                            </th>
                            <th>
                                E-posta
                            </th>
                            <th>
                                Telefon
                            </th>
                            <th>
                                Yetki
                            </th>

                            <th ><a href='@Url.Action("Create", "TabKullanicis" )' class="btn btn-info">Yeni Kullanıcı Ekle</a></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KulAdi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.kulisim)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.kulsoyisim)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.eposta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem =>item.TabYetki.Yetkiadi)
                                </td>
                                <td >
                                    @*<button class="btn btn-danger">@Html.ActionLink("Sil", "Delete", new { id = item.idKullanici })</button>
                                    <button class="btn btn-light"> @Html.ActionLink("Düzenle", "Edit", new { id = item.idKullanici }) </button>
                                    <button class="btn btn-info">@Html.ActionLink("Detaylar", "Details", new { id = item.idKullanici })</button>*@
                                    <a href='@Url.Action("Delete", "TabKullanicis" , new {id=item.idKullanici })' class="btn btn-danger">Sil</a>

                                    <a href='@Url.Action("Edit", "TabKullanicis" , new {id=item.idKullanici })' class="btn btn-dark">Düzenle</a>

                                    <a href='@Url.Action("Details", "TabKullanicis" , new {id=item.idKullanici })' class="btn btn-primary">Detaylar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>



            </div>

        </div>






    </div>
</div>


<!-- Bootstrap core JavaScript-->
