@model StokHaneV4.Models.Tabirsaliye

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4 ">
    <div class="card-header py-3"> <h6 class="m-0 font-weight-bold text-primary">Düzenle</h6></div>
    <div class="card-body">



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.idirsaliye)

                <div class="form-group">
                    <h6 class="control-label col-md-10">İrsaliye kod</h6>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.irsaliyeKod, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.irsaliyeKod, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h6 class="control-label col-md-10">Tarih</h6>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.girdiTarih, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.girdiTarih, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h6 class="control-label col-md-10">Firma-1</h6>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.firma, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.firma, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h6 class="control-label col-md-10">Firma-2</h6>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.firma2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.firma2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                        <a href='@Url.Action("Index","Tabirsaliyes")' class="btn btn-primary">İptal</a>
                    </div>
                </div>
            </div>
        }

       
    </div>


</div>

