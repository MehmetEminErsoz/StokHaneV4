@model StokHaneV4.Models.TabHane

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card shadow mb-4 ">
    <div class="card-header py-3"> <h6 class="m-0 font-weight-bold text-primary">Anasayfa</h6></div>
    <div class="card-body">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <h6 class="control-label col-md-10">İşletme kod</h6>
                    <div class="col-md-10">
                        @Html.DropDownList("idisletme", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idisletme, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <h6 class="control-label col-md-10"> Tavukhane adı</h6>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TavukhaneAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TavukhaneAdi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Oluştur" class="btn btn-success" />
                        <a href='@Url.Action("Index","TabHanes")' class="btn btn-primary">İptal</a>
                    </div>
                </div>
            </div>
        }

       

    </div>


</div>
